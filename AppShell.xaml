<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="JIProyecto.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:JIProyecto.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
      Title="Nuevo alumno"
      ContentTemplate="{DataTemplate local:Alumno}"
      Route="Alumno" />


    <ShellContent
        Title="Listar"
        ContentTemplate="{DataTemplate local:ListadoAlumnos}"
        Route="ListadoAlumnos" />


</Shell>
